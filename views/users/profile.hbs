<div class="card my-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img class="img-responsive center-block" src="{{user.image}}"
        style="width: 250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    </div>
    <div class="col-md-3">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a>
      </div>
    </div>
    <div class="col-md-5 pt-3">
      <p><strong>Followings(追蹤中)：</strong>{{user.Followings.length}}</p>
      <p><strong>Followers(粉絲)：</strong>{{user.Followers.length}}</p>
      <p><strong>已評論餐廳：</strong>{{user.commentRestaurants.length}}</p>
      <p><strong>已收藏餐廳：</strong>{{user.FavoritedRestaurants.length}}</p>
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col-md-4">
    {{!-- 追蹤數 --}}
    <div class="card mb-3">
      <div class="card-header">
        {{user.Followings.length}} 追蹤中
      </div>
      <div class="row g-0 p-3">
        {{#each user.Followings}}
        <div class="col-md-auto px-2">
          <img src="{{this.image}}" class="img-fluid rounded-start" style="height: 50px; width: 50px;">
        </div>
        {{/each}}
      </div>
    </div>

    {{!-- 粉絲數 --}}
    <div class="card mb-3">
      <div class="card-header">
        {{user.Followers.length}} 粉絲
      </div>
      <div class="row g-0 p-3">
        {{#each user.Followers}}
        <div class="col-md-auto px-2">
          <img src="{{this.image}}" class="img-fluid rounded-start" style="height: 50px; width: 50px;">
        </div>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="col-md-8">
    {{!-- 評論餐廳數 --}}
    <div class="card mb-3">
      <div class="card-header">
        {{user.commentRestaurants.length}} 已評論餐廳
      </div>
      <div class="row g-0 p-3">
        {{#each user.commentRestaurants}}
        <div class="col-md-auto px-2">
          <a href="/restaurants/{{this.id}}"><img src="{{this.image}}"
              class="img-fluid rounded-start" style="height: 50px; width: 50px;"></a>
        </div>
        {{/each}}
      </div>
    </div>

    {{!-- 收藏餐廳數 --}}
    <div class="card mb-3">
      <div class="card-header">
        {{user.FavoritedRestaurants.length}} 已收藏餐廳
      </div>
      <div class="row g-0 p-3">
        {{#each user.FavoritedRestaurants}}
        <div class="col-md-auto px-2">
          <a href="/restaurants/{{this.id}}"><img src="{{this.image}}" class="img-fluid rounded-start"
              style="height: 50px; width: 50px;"></a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
